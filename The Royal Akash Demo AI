<script>
let chatCounter=0;
let paymentCounter=0;
let toolCounter=0;

function sendMessage(){
let input=document.getElementById("userInput");
let chat=document.getElementById("chat");
let text=input.value.trim();
if(!text) return;

chat.innerHTML+="<div class='message user'>"+text+"</div>";
let lower=text.toLowerCase();
let reply="Thank you for connecting.";

if(lower.includes("health")||lower.includes("diet")){
reply="Focus on natural Ayurveda based nutrition and discipline.";
}
else if(lower.includes("network")||lower.includes("marketing")){
reply="Follow win-win philosophy. Serve first, earn later.";
}
else if(lower.includes("income")){
reply="Income depends on consistent effort and compliance.";
}
else if(lower.includes("business")){
reply="Build ethical duplication system for scalable growth.";
}

chat.innerHTML+="<div class='message bot'>"+reply+"</div>";
input.value="";
chat.scrollTop=chat.scrollHeight;
chatCounter++;
document.getElementById("chatCount").innerText=chatCounter;
}

/* Paytm Production Hook Structure */
function simulatePayment(amount){
if(amount==0){
alert("Free Plan Activated");
return;
}
alert("Redirecting to Paytm (Demo Mode) for â‚¹"+amount);

/* Production Integration Example:

fetch('/create-order',{
method:'POST',
headers:{'Content-Type':'application/json'},
body:JSON.stringify({amount:amount})
})
.then(res=>res.json())
.then(data=>{
window.location.href=data.paytmUrl;
});

*/

paymentCounter++;
document.getElementById("paymentCount").innerText=paymentCounter;
}

function calculateBMI(){
let h=document.getElementById("height").value/100;
let w=document.getElementById("weight").value;
let bmi=(w/(h*h)).toFixed(2);
document.getElementById("bmiResult").innerText="BMI: "+bmi;
toolCounter++;
document.getElementById("toolCount").innerText=toolCounter;
}

function calculateCalories(){
let w=document.getElementById("calWeight").value;
let cal=w*24;
document.getElementById("calResult").innerText="Estimated Calories: "+cal;
toolCounter++;
document.getElementById("toolCount").innerText=toolCounter;
}
</script>

